{
  "dimension": {
    "scale": {
      "$type": "dimension",
      "$value": "2"
    },
    "xs": {
      "$type": "dimension",
      "$value": "4"
    },
    "sm": {
      "$type": "dimension",
      "$value": "{dimension.xs} * {dimension.scale}"
    },
    "md": {
      "$type": "dimension",
      "$value": "{dimension.sm} * {dimension.scale}"
    },
    "lg": {
      "$type": "dimension",
      "$value": "{dimension.md} * {dimension.scale}"
    },
    "xl": {
      "$type": "dimension",
      "$value": "{dimension.lg} * {dimension.scale}"
    }
  },
  "color": {
    "primary": {
      "$type": "color",
      "$value": "#0d6efd"
    },
    "secondary": {
      "$type": "color",
      "$value": "#6c757d"
    },
    "success": {
      "$type": "color",
      "$value": "#198754"
    },
    "danger": {
      "$type": "color",
      "$value": "#dc3545"
    },
    "warning": {
      "$type": "color",
      "$value": "#ffc107"
    },
    "info": {
      "$type": "color",
      "$value": "#0dcaf0"
    }
  },
  "background": {
    "primary": {
      "$type": "color",
      "$value": "{color.primary}"
    },
    "secondary": {
      "$type": "color",
      "$value": "{color.secondary}"
    },
    "success": {
      "$type": "color",
      "$value": "{color.success}"
    },
    "danger": {
      "$type": "color",
      "$value": "{color.danger}"
    },
    "warning": {
      "$type": "color",
      "$value": "{color.warning}"
    },
    "info": {
      "$type": "color",
      "$value": "{color.info}"
    }
  },
  "borderRadius": {
    "sm": {
      "$type": "borderRadius",
      "$value": "2"
    },
    "md": {
      "$type": "borderRadius",
      "$value": "4"
    },
    "lg": {
      "$type": "borderRadius",
      "$value": "8"
    }
  },
  "border": {
    "none": {
      "$type": "border",
      "$value": "none"
    },
    "primary": {
      "$type": "border",
      "$value": "1px solid {color.primary}"
    },
    "secondary": {
      "$type": "border",
      "$value": "1px solid {color.secondary}"
    },
    "success": {
      "$type": "border",
      "$value": "1px solid {color.success}"
    },
    "danger": {
      "$type": "border",
      "$value": "1px solid {color.danger}"
    },
    "warning": {
      "$type": "border",
      "$value": "1px solid {color.warning}"
    },
    "info": {
      "$type": "border",
      "$value": "1px solid {color.info}"
    },
    "width": {
      "thin": {
        "$type": "dimension",
        "$value": "1"
      },
      "regular": {
        "$type": "dimension",
        "$value": "2"
      },
      "thick": {
        "$type": "dimension",
        "$value": "3"
      }
    }
  },
  "spacing": {
    "xs": {
      "$type": "spacing",
      "$value": "{dimension.xs}"
    },
    "sm": {
      "$type": "spacing",
      "$value": "{dimension.sm}"
    },
    "md": {
      "$type": "spacing",
      "$value": "{dimension.md}"
    },
    "lg": {
      "$type": "spacing",
      "$value": "{dimension.lg}"
    },
    "xl": {
      "$type": "spacing",
      "$value": "{dimension.xl}"
    }
  }
}
